# =============================================================================
# CORE AI SERVICES
# =============================================================================

# OpenAI API (required for CrewAI agents)
OPENAI_API_KEY=sk-your-openai-api-key-here

# CrewAI API (optional - only needed for CrewAI+ features)
CREWAI_API_KEY=your-crewai-api-key-here

# =============================================================================
# WEAVE OBSERVABILITY
# =============================================================================

# Weights & Biases API key (required for Weave tracing)
WANDB_API_KEY=your-wandb-api-key-here

# W&B Project name (optional - defaults to 'crewai-mcp-hackathon')
WANDB_PROJECT=crewai-mcp-hackathon

# W&B Entity (optional - your username or team name)
WANDB_ENTITY=your-username

# =============================================================================
# MCP SERVER APIs
# =============================================================================

# YouTube Data API v3 (for YouTube content analysis)
YOUTUBE_API_KEY=your-youtube-api-key-here

# Exa Search API (for web search capabilities)
EXA_API_KEY=your-exa-api-key-here

# Google Maps API (for location and route planning)
GOOGLE_MAPS_API_KEY=your-google-maps-api-key-here

# Google Calendar API (OAuth2 credentials file path)
GOOGLE_CALENDAR_CREDENTIALS_PATH=./config/google_calendar_credentials.json

# =============================================================================
# OPTIONAL SERVICES
# =============================================================================

# Alternative LLM providers (if not using OpenAI)
ANTHROPIC_API_KEY=your-anthropic-api-key-here
GROQ_API_KEY=your-groq-api-key-here
TOGETHER_API_KEY=your-together-api-key-here

# Text-to-Speech services
ELEVEN_LABS_API_KEY=your-eleven-labs-api-key-here
OPENAI_TTS_API_KEY=your-openai-api-key-here

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Environment (development, staging, production)
ENVIRONMENT=development

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# MCP server ports (defaults provided)
YOUTUBE_MCP_PORT=8001
EXA_MCP_PORT=8002
MAPS_MCP_PORT=8003
CALENDAR_MCP_PORT=8004

# Application settings
DEFAULT_AGENT_MODEL=gpt-4o-mini
MAX_RETRY_ATTEMPTS=3
REQUEST_TIMEOUT=30

# =============================================================================
# SECURITY & COMPLIANCE
# =============================================================================

# API rate limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Data retention (days)
TRACE_RETENTION_DAYS=30

# Privacy settings
ENABLE_DATA_SANITIZATION=true
ENABLE_PII_FILTERING=true